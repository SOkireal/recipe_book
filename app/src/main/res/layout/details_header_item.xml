<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/image_recipe_details"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/recipe_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:paddingLeft="20dp"
        android:background="@color/background_title_name_recipe"
        android:fontFamily="@font/abril_fatface"
        android:text="@string/name_recipe"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/image_recipe_details"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="RtlCompat,SpUsage" />

    <ImageView
        android:id="@+id/servings_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginEnd="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/image_recipe_details"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/recipe_title_tv"
        app:srcCompat="@drawable/baseline_restaurant_24" />

    <ImageView
        android:id="@+id/readyInMinutes_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/image_recipe_details"
        app:layout_constraintEnd_toStartOf="@+id/servings_iv"
        app:layout_constraintTop_toTopOf="@+id/recipe_title_tv"
        app:srcCompat="@drawable/baseline_access_time_24" />

    <TextView
        android:id="@+id/servings_tv"
        android:layout_width="30dp"
        android:layout_height="24dp"
        android:layout_marginStart="2dp"
        android:fontFamily="@font/abril_fatface"
        android:text="2"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/image_recipe_details"
        app:layout_constraintStart_toEndOf="@+id/servings_iv"
        app:layout_constraintTop_toTopOf="@+id/recipe_title_tv" />

    <TextView
        android:id="@+id/readyInMinutes_tv"
        android:layout_width="30dp"
        android:layout_height="24dp"
        android:layout_marginStart="2dp"
        android:fontFamily="@font/abril_fatface"
        android:gravity="center"
        android:text="129"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/image_recipe_details"
        app:layout_constraintStart_toEndOf="@+id/readyInMinutes_iv"
        app:layout_constraintTop_toTopOf="@+id/recipe_title_tv" />


</androidx.constraintlayout.widget.ConstraintLayout>