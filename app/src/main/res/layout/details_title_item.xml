<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/ingredients_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_start_details_ingredients_title_tv"
        android:layout_marginTop="@dimen/margin_top_details_ingredients_title_tv"
        android:layout_marginEnd="@dimen/margin_end_details_ingredients_title_tv"
        android:fontFamily="@font/queensides_medium"
        android:textStyle="bold"
        android:text="@string/details_ingredients_title_tv"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/details_ingredients_title_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>