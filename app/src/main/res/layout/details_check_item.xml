<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_top_details_check"
    android:layout_marginHorizontal="@dimen/margin_horizontal_details_check">

    <CheckBox
        android:id="@+id/check_item_cb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/queensides_medium"
        android:text="@string/details_check_title"
        android:textSize="@dimen/details_check_title"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:button="@drawable/checkbox_selector"
        android:paddingStart="@dimen/details_check_padding_cb"
        android:background="@drawable/details_check_item_rounded_corner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
